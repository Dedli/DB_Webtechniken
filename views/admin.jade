extends layout

block content

  a(href='/signout', class='text-center new-account') Ausloggen
  p #{message}
  h1 Admininterface
    hr
  div
        h2 Nutzer Anlegen
        form(action='/create_grem_user',method='post')
            include create_user_form
            include create_grem_form
            div
               button(type='submit',id='submitCreateUser') Nutzer anlegen
  hr
  h2 Nutzer &auml;ndern
  table(border= '1px')
    thead
        tr
            td.hidden ID
            td Vorname
            td Nachname
            td Nuterkennzeichen
            td Matrikelnummer
            td bearbeiten
    tbody
    each object in grm_members
        tr
            td.hidden=object._id
            td=object.firstname
            td=object.lastname
            td=object.nkz
            td=object.matr_nr
            td
                    a(href='/edit_grm_user/'+object._id)
                        span.glyphicon.glyphicon-edit
  hr
  h2 Gremien
  a(href='/create_committee') Gremium erstellen
  table(border= '1px')
      thead
          tr
            td.hidden ID
            td Namen
            td Beschreibung
            td bearbeiten
      tdbody
      each comm in committees
          tr
            form(action='/edit_committee/'+comm._id, method='post', name='edit_committee')
                td.hidden
                    input(value=comm._id,name='id')
                td
                    input(type='text',value=comm._name,name='_name')
                td
                    input(type='text', value=comm.description,name='description')
                td
                    a(href='#',onclick="edit_committee.submit()")
                        span.glyphicon.glyphicon-edit