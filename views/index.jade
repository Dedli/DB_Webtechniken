// Root Ressource, welche ein Formular für den Login darstellt
extends layout
block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Anmelden zur StuRa Mitgliederverwaltung der TU-Chemnitz
                    div.account-wall
                        img(class='profile-img', src='/public/images/profile_dummy.png')
                        form(class='form-signin', action='/login', method='POST')
                            input(type='text', name='username' class='form-control', placeholder='Benutzername',required, autofocus)
                            input(type='password', name='password' class='form-control', placeholder='Passwort', required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Einloggen
                            span.clearfix
                    a(href='/signup', class='text-center new-account') Account erstellen
                    #message
                    if message
                        h1.text-center.error-message #{message}